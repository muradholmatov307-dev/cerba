-- Phoenix UI Library Example
local Phoenix = loadstring(game:HttpGet("https://raw.githubusercontent.com/muradholmatov307-dev/cerba/refs/heads/main/source"))()

-- Create window
local window = Phoenix:Window("Phoenix UI v2.0")
window:LockScreenBoundaries(true)

-- Send notification
Phoenix.Notify({
    Title = "System",
    Description = "Phoenix UI Loaded Successfully!",
    Duration = 3
})

-- Main Tab
local mainTab = window:Tab("Main")
local mainSection = mainTab:Section("Main Controls")

local title = mainSection:Title("Welcome to Phoenix UI")
title:ChangeText("Phoenix UI - Advanced Controls")

local label = mainSection:Label("Status: Ready")
label:ChangeText("Status: Initialized", true)

local toggle = mainSection:Toggle("Enable Features", function(bool)
    print("Features:", bool)
    Phoenix.Notify({
        Title = "Features",
        Description = bool and "Features Enabled" or "Features Disabled",
        Duration = 2
    })
end)
toggle:Set(true, true)

mainSection:Button("Test Notification", function()
    Phoenix.Notify({
        Title = "Test Notification",
        Description = "This is a test notification from Phoenix UI!",
        Duration = 3
    })
end)

-- Visuals Tab
local visualTab = window:Tab("Visuals")
local espSection = visualTab:Section("ESP Settings")

local espToggle = espSection:Toggle("Enable ESP", function(bool)
    Phoenix.Notify({
        Title = "ESP",
        Description = bool and "ESP Enabled" or "ESP Disabled",
        Duration = 2
    })
end)

espSection:Slider("ESP Distance", function(val)
    print("ESP Distance:", val)
end, 500, 50)

espSection:ColorWheel("ESP Color", function(color)
    Phoenix.Notify({
        Title = "Color Changed",
        Description = "ESP Color Updated",
        Duration = 1
    })
end)

-- Player Tab
local playerTab = window:Tab("Player")
local playerSection = playerTab:Section("Player Modifications")

local speedSlider = playerSection:Slider("WalkSpeed", function(val)
    if game.Players.LocalPlayer.Character then
        local humanoid = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            humanoid.WalkSpeed = val
        end
    end
end, 100, 16)

local jumpSlider = playerSection:Slider("JumpPower", function(val)
    if game.Players.LocalPlayer.Character then
        local humanoid = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            humanoid.JumpPower = val
        end
    end
end, 100, 50)

playerSection:Button("Reset Character", function()
    if game.Players.LocalPlayer.Character then
        game.Players.LocalPlayer.Character:BreakJoints()
        Phoenix.Notify({
            Title = "Character",
            Description = "Character Reset",
            Duration = 2
        })
    end
end)

-- Settings Tab
local settingsTab = window:Tab("Settings")
local configSection = settingsTab:Section("Configuration")

local keybind = configSection:Keybind("Toggle UI", function()
    Phoenix.Notify({
        Title = "UI Toggle",
        Description = "UI Visibility Toggled",
        Duration = 1
    })
end, "RightControl")

configSection:TextBox("Config Name", function(text)
    Phoenix.Notify({
        Title = "Config Saved",
        Description = "Configuration: " .. text,
        Duration = 2
    })
end)

-- Multiple notifications test
wait(2)
Phoenix.Notify({
    Title = "System Ready",
    Description = "All features loaded successfully",
    Duration = 3
})

wait(1)
Phoenix.Notify({
    Title = "Welcome",
    Description = "Enjoy using Phoenix UI!",
    Duration = 4
})

print("Phoenix UI Example Loaded Successfully!")
